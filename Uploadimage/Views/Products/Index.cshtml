@model IEnumerable<Uploadimage.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class= "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProducId }, new { @class="btn btn-xs btn-info"}) |
            @Html.ActionLink("Details", "Details", new { id=item.ProducId }, new { @class = "btn btn-xs btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProducId }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}

</table>
